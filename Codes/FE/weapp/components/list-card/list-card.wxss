/* components/list-card/list-card.wxss */

.list-card{
  display: flex;
  flex-direction: row;
  flex-flow:wrap;
  justify-content: space-between;
}
.item-card{
  flex: 0 0 auto;
  width: calc(50% - 10rpx) ;
  max-height:530rpx; 
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 15rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.card-body{
  width: 100%;
  height: 400rpx;
  margin-bottom: 25rpx;
  position: relative
}
.card-body .tips{
  position: absolute;
  top: 0;
  left: 0;
  padding: 10rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, .5);
  border-bottom-right-radius:20rpx;
}
.card-body .img{
  width: 100%;
  height: 100%;
}
.card-body .finished{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: url(https://resource.ikmark.com/tuixiaobao/weapp/finished.png) no-repeat center center;
  background-color: rgba(0, 0, 0, .7);
  background-size: 180rpx;
}
.card-desc{
  padding: 0 5rpx;
}
.card-title{
  font-size: 32rpx;
  color: #3c4a55;
  overflow:hidden;
  white-space:nowrap; 
  text-overflow:ellipsis;
}
.card-help{
  font-size: 24rpx;
  color: #b1bfcd;
  min-height: 20rpx;
}
.no-content{
  width: 467rpx;
  padding-top: 485rpx;
  background: url(https://resource.ikmark.com/tuixiaobao/weapp/bg-error.png) no-repeat 0 0;
  background-size: contain;
  margin: 200rpx auto 0;
  text-align: center;
  font-size: 24rpx;
  color: #b1bfcd;
}