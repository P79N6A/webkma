<!--components/tabbar.wxml-->

<view class="tabbar-placeholder">
  <view class="tabbar {{showTabbar}} ">
    <block wx:if="{{!!userBindInfo && userBindInfo.state==0 && userBindInfo.businessState==0}}">
      <view class="tabbar-item item-home {{currentPage==='home'?'active':''}}" catchtap="onSwitchTab" data-page="/pages/home/home">活动广场</view>
      <view class="tabbar-item item-marketing {{currentPage==='marketing'?'active':''}}" catchtap="onSwitchTab" data-page="/pages/marketing/marketing">
        <view class="dot" wx:if="{{userBindInfo.jobCount > 0}}">{{userBindInfo.jobCount>99?'99+':userBindInfo.jobCount}}</view>推广中心</view>
      <view class="tabbar-item item-my {{currentPage==='my'?'active':''}}" catchtap="onSwitchTab" data-page="/pages/my/index">个人中心</view>
    </block>
    <block wx:else>
      <view class="tabbar-item item-home {{currentPage==='home'?'active':''}}" catchtap="onSwitchTab" data-page="/pages/home/home">活动广场</view>
      <view class="tabbar-item item-my {{currentPage==='my'?'active':''}}" catchtap="onSwitchTab" data-page="/pages/my/index">个人中心</view>
    </block>
  </view>
</view>