/* pages/activity-management/activity-management.wxss */
.pg-activity-management .pg-fixed{
  position: fixed;
  top:30rpx;
  right:0;
  z-index: 10;
}
.pg-activity-management .pg-fixed .top-icon{
  height: 90rpx;
  width: 90rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  background: rgba(0,0,0,.7);
  margin-right: 30rpx;
  position:relative;
}
.pg-activity-management .pg-fixed .top-icon>.iconfont{
  font-size: 38rpx;
}
.pg-activity-management .pg-fixed .top-icon .shareBtn{
   width: 100%;
   height: 100%;
   position: absolute;
   top:0;
   left:0;
   opacity: 0;
}
.pg-activity-management .activeImge{
  position: relative;
  z-index: -1;
   width: 100%;
   height: 910rpx;
}
.pg-activity-management .pg-activity-first{
  margin-top:-350rpx;
  background: #fff;
  width:710rpx;
  margin-right:auto;
  margin-left:auto;
  border-radius: 16rpx;
  box-sizing: border-box;
}
.pg-activity-management .weui-article{
  box-sizing: border-box;
  padding:40rpx 40rpx;
}
.pg-activity-management .weui-media-box__desc{
  line-height: 1.6;
}
.pg-activity-management .activityTitle{
  margin-bottom: 30rpx;
  margin-top:12rpx;
  line-height: 1.4;
}
.pg-activity-management .createTime{
  margin-top:30rpx;
  margin-bottom:40rpx;
  line-height: 1;
}
.pg-activity-management .createTime .icon-shijian{
  font-size: 26rpx;
}
.pg-activity-management .pg-spreadDetail{
  text-align: center;
  border-top:2rpx solid #f4f4f4;
  padding-top:40rpx;
}
.pg-activity-management .spreadNum{
  color:#fa766b;
  font-size: 54rpx;
}
.pg-activity-management .pg-spreadDetail>.weui-flex__item{
  border-right:2rpx solid #f4f4f4;
  
}
.pg-activity-management .pg-spreadDetail>.weui-flex__item:last-child{
  border-right:none;
}
.pg-activity-management .pg-tab{
  height:700rpx;
  width:710rpx;
  background: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
  margin:10px auto;
}
.weui-navbar__slider{
  bottom: -1rpx;
}
.scan{
  position: relative;
}
.scan .container{
  width:100%;
  height: 600rpx; 
  position: absolute;
  top:142rpx;
  left: 0rpx;
  z-index:1;
}

ec-canvas {
  width: 100%;
  height: 100%;
}