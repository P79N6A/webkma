
.mk-cover{
  height: 500rpx;
  width: 100vm;
}
.mk-cover .img{
  width: 100%;
  height: 100%;
}
.mk-overview{
  background-color: #ffffff;
  width: 710rpx;
  border-radius: 10rpx;
  margin: -160rpx auto 0;
  position: relative;
}
.mk-info{
  padding: 50rpx 60rpx;
  border-bottom: 1px solid #f8f8f8;
}
.mk-statistical{
  padding: 30rpx 0;
}
.mk-statistical .item {
  box-sizing: border-box;
  padding-top:15rpx; 
  padding-left:25rpx;
  padding-right:25rpx;
  text-align: center;
}
.mk-statistical .item .rankingTrend{
  width:16rpx;
  height: 24rpx;
}
.mk-statistical .item + .item{
  border-left: 1px solid #f8f8f8;
}
.item-count{
  font-size: 54rpx;
  color: #fa766b;
}
.mk-body{
  padding: 50rpx 25rpx 0;
}
.mk-title{
  margin-left: 5rpx;
  margin-bottom: 35rpx;
  padding-left: 24rpx;
  line-height: 40rpx;
  height: 40rpx;
  border-left: 4rpx solid #24d0c6;
}
.noDataList{
  text-align: center;
  margin-top:100rpx;
  font-size: 32rpx;
  color:#aaa;
}
.authentication{
  width:108rpx;
  height:34.8rpx;
  margin-left:20rpx;
}
.rankNum{
  display: inline-block;
  line-height: 130%;
  padding:0 10rpx;
  margin:0 6rpx;
  color:#fff;
  background: rgb(153,153,153);
}
.rankNum.bg-red{
  background: #fa766b;
}
.rankNum.bg-blue{
  background: rbg(36,208,198);
}