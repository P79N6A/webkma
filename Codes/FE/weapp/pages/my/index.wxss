/* pages/my/index.wxss */

@import "/components/tabbar/tabbar.wxss";

.pg-my-main{
  min-height: 100vh;
  background-image:none;
}

.my-head{
  height: 340rpx;
  text-align: center;
  box-sizing: border-box;
  padding-top: 20rpx;
  color: #333;
  font-size: 18px;
  background-color: #00cacc;
}
.my-headimg-decorate{
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
  border: 50rpx solid rgba(255, 255, 255, .2) ; 
  box-shadow: 0 0 0 70rpx rgba(255, 255, 255, .1);
  margin: auto;
}
.my-head-img{
 width: 100%;
 height: 100%;
 border-radius: 100%;
 border: 8rpx solid #fff;
 box-sizing: border-box;
}
.page__bd{
  margin-top:75rpx;
}
.weui-cells{
  margin-top: 0;
}
.page__title{
  position: relative;
  top: -30rpx;
  font-size: 36rpx;
  color: #fff;
}
.icon{
  width: 50rpx;
  height: 50rpx;
}
.position-relative{
  position: relative;
  box-sizing: border-box;
}
.getPhoneNumber{
  position:absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  opacity:0;
  box-sizing:border-box;
  padding:0;
}

.weui-cell:before{
  width: calc(100vw - 30rpx);
}
