<!--pages/tasks-customer-details/tasks-customer-details.wxml-->
<view class='detail-box'>
  <view class='detail-head task-head'> 
    <!-- 客户信息 -->
    <view class='info-card' style='min-height:330rpx;'>
      <view class='user-info flex'>
        <view class='user-photo'>
          <image src="../../images/icon-default-photo.png"></image>
        </view>
        <view class='flex flex-column' style='width:500rpx;position:relative;'>
          <text class='font-30 title-color mt-12'>客户姓名</text>
          <text class='font-22 color-gray' style='margin:6rpx 0;'>"暂无手机号"</text>
        </view>
      </view>
      <view class='data-info task-data-info flex'>
        <view>
          <text>营销力</text>
          <text class='font-36 color-green'>{{customerInfo.marketing_power || '0'}}</text>
        </view>
        <view>
          <text>排名</text>
          <text class='font-36 color-green'>{{(customerInfo.ranking == '-1'?'暂无排名':customerInfo.ranking) || '0'}}</text>
        </view>
      </view>
    </view>
  </view> 
  <!-- 成交概率 -->
  <view class='task-make'>
    <view class='menu-title' style='border:none;'>
      <view class='side-line'></view>
      <text class='font-26 title-color'>成交概率</text>
    </view>
    <view class='make-info'>
      <view>浏览 100000</view>
      <view>咨询 10</view>
      <view>成交 55</view> 
      <text class='big-text'>中</text>
    </view> 
  </view>
  <!-- 用户行为方阵 -->
  <view class=' bg-color mb-20'>
    <view class='content_boxs'>
      <view class="container" style="width:554rpx;height:411rpx; margin:0 auto">
        <charts-flow-radar dataSource="{{marketingData}}"></charts-flow-radar>
      </view>
    </view>
  </view>
  <!-- 客户来源 -->
  <view class='detail-source bg-color mb-20' wx:if="{{taskSource.length > 1}}">
    <view class='menu-title' style='border:none;'>
      <view class='side-line'></view>
      <text class='font-26 title-color'>客户来源</text>
    </view>
    <scroll-view scroll-x style="width:93%;height:172rpx;padding:0 25rpx; white-space: nowrap;">
      <view class='source-info' wx:for="{{taskSource}}" wx:key="item">
        <view style="width:{{(index !== 2 && taskSource.length == 2)?'592':'300'}}rpx;" class='flex'>
          <view style="display:inline-block;width: {{(index !== 2 && taskSource.length == 2)?'504':'211'}}rpx;position: relative;">
            <text class='connection-line' style="width:{{(index !== 2 && taskSource.length == 2)?'488':'200'}}rpx;"></text>
            <text class='arrow'></text>
          </view>
          <view class='flex flex-column'>
            <image class='source-photo' src='{{item.userImage}}'></image>
            <text class='font-20 eplipes' style='width:87rpx;text-align:center;'>{{item.userName}}</text>
          </view>
          <text wx:if="{{item.from_type==1}}" style="left:{{(index !== 2 && taskSource.length == 2)?'225':'83'}}rpx;" class='source-text font-20 tips-gary'>名片</text>
          <text wx:if="{{item.from_type==2}}" style="left:{{(index !== 2 && taskSource.length == 2)?'225':'83'}}rpx;" class='source-text font-20 tips-gary'>活动</text>
          <text wx:if="{{item.from_type==3}}" style="left:{{(index !== 2 && taskSource.length == 2)?'225':'83'}}rpx;" class='source-text font-20 tips-gary'>文章</text>
          <text wx:if="{{item.from_name!==''||item.from_name!==null}}" class='source-activity font-20 tips-gary eplipes' style="width:{{(index !== 2 && taskSource.length == 2)?'400':'180'}}rpx; left:{{(index !== 2 && taskSource.length == 2)?'42':'10'}}rpx;">{{item.from_type=='1'?'':item.from_name}}</text>
        </view>
      </view>
    </scroll-view>
  </view>
  <!-- 浏览习惯 -->
  <view>
    <view class='menu-title' style='border:none;'>
      <view class='side-line'></view>
      <text class='font-26 title-color'>浏览习惯</text>
    </view>
    <view class='boxs_cont_info' style='width:100%; height:400rpx; margin:0 auto'>
      <charts-daily-browse-line dataSource="{{dailyLineDataSource}}"></charts-daily-browse-line>
    </view>
  </view>
</view>

