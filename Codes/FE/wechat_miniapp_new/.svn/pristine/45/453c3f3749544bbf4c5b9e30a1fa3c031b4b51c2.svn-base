<!--pages/customer-details/customer-details.wxml-->
<view class='detail-box'>
  <view class='detail-head'> 
    <!-- 客户信息 -->
    <view class='info-card' style='min-height:456rpx;'>
      <view class='user-info flex'>
        <view class='user-photo'>
          <image src="{{customerInfo.face || '../../images/icon-default-photo.png'}}"></image>
        </view>
        <view class='flex flex-column' style='width:500rpx;position:relative;'>
          <text class='font-30 title-color mt-12'>{{customerInfo.name || customerInfo.nickname}}</text>
          <text class='font-22 color-gray' style='margin:6rpx 0;'>{{customerInfo.phone || "暂无手机号"}}</text>
          <text class='font-20 color-gray tips' style="text-indent: {{type==2?'49':'0'}}rpx;">{{customerInfo.remark}}</text>
          <view class='icon-jump' wx:if="{{type==2}}">
            <image src='../../images/icon-message.png'></image>
            <image src='../../images/icon-edit.png' bindtap='editCustomerInfo'></image>
          </view>
          <text class='font-20 color-blue remark-edit' wx:if="{{type==2}}" bindtap="geturl">编辑</text> 
        </view>
      </view>
      <view class='label'>
        <text wx:for="{{customerInfo.label}}" wx:key="item">{{item}}</text>
      </view>
      <view class='data-info flex'>
        <view>
          <text>成交金额</text>
          <text class='font-36 color-red'> <text class='font-22'>￥</text>{{customerInfo.transaction_amount || '0'}}</text>
        </view>
        <view>
          <text>营销力</text>
          <text class='font-36 color-green'>{{customerInfo.marketing_power || '0'}}</text>
        </view>
        <view>
          <text>排名</text>
          <text class='font-36 color-green'>{{customerInfo.ranking || '暂无'}}</text>
        </view>
      </view>
    </view>
  </view>
  <!-- 用户行为方阵 -->
  <view class='user-behavior bg-color mb-20'>
    <view class='title' style='border:none;'>
      <view class='side-line'></view>
      <text class='font-26 title-color'>用户行为方阵</text>
    </view>
    <view class="container" style="width:100vw;height:40vh;">
      <charts-flow-radar dataSource="{{radarDataSource}}"></charts-flow-radar>
    </view>
  </view>
  <!-- 客户来源 -->
  <view class='detail-source bg-color mb-20' style='height:100%;'>
    <view class='title' style='border:none;'>
      <view class='side-line'></view>
      <text class='font-26 title-color'>客户来源</text>
    </view>
    <view class='flex' style="width: 100%;height:200rpx;padding:0 25rpx; overflow-x:scroll;">

        <view class='source-info flex' wx:for="{{itemList}}" wx:key="item">
          <view class='flex flex-column' style='text-align:center;'>
            <image class='source-photo' src='{{item.img}}'></image>
            <text class='font-20'>{{item.name}}</text>
          </view>
          <text class='connection-line'></text>
          <text class='arrow'></text>
        </view>

    </view>
  </view>
  <!-- 参与的活动 -->
  <view class='user-task bg-color mb-20'>
    <view class='title' style='border:none;'>
      <view class='side-line'></view>
      <text class='font-26 title-color'>TA参与的活动</text>
      <view class='drop-option'>
        <view bindtap="taskAction" style='position:relative;'>
          <text class='font-22 tips-gary'>{{taskActionText}}</text> 
          <text class='corner'></text>
          <!-- <icon type='icon-zhankai1'></icon> -->
        </view>
      </view>
    </view>
    <view wx:for="{{task.list}}" wx:key="index">
      <task-list-item  item="{{item}}" urls="{{task.urls}}" bind:itemDataEvent="itemDataEvent"></task-list-item>
    </view>
     <i-load-more wx:if="{{task.list.length != 0}}" tip="{{loadingOpj.loadingText}}" loading="{{loadingOpj.loadingText=='玩命加载中'}}" />
  </view>
</view>
