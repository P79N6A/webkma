/* components/employ-report/employ-report.wxss */
.report-modal {
  position: fixed;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: 100;
}
.report-mask {
  position: absolute;
  width: 100%;
  height: 100vh;
  background-color: rgba(0,0,0,.7);
  z-index: 101;
}
.report-container {
  position: relative;
  top: 10rpx;
  left: 125rpx; 
  width: 500rpx;
  height: 998rpx;
  /* height: 100vh; */
  z-index: 102;
}
.canvas_box,.canvas_cover {
  /* position: fixed; */
  width: 500rpx;
  height: 680rpx;
  /* top: 0;
  left: 125rpx; */
  /* background-color: red; */
}
.report_panel {
  position: relative;
  width: 500rpx;
  background-color: #fff;
  border-radius: 0 0 10rpx 10rpx;
  padding-top: 10rpx;
  overflow: hidden;
  margin-top: -10rpx;
  z-index: 103;
}
.report_row {
  position: relative;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 22rpx;
  color:rgba(60,74,85,1);
}
.report_row .row_line {
  position: absolute;
  top: 14rpx;
  width: 179rpx;
  height: 0rpx;
  border: 1rpx solid rgba(221,228,235,1);
}
.report_row .line_left {
  left: 0;
}
.report_row .line_right {
  right: 0;
}
.share_option {
  display: flex;
  width: 265rpx;
  height: 103rpx;
  margin: 20rpx auto 34rpx; 
  font-size: 22rpx;
  color:rgba(177,191,205,1);
  justify-content: space-between;
}
.share_option image {
  width: 70rpx;
  height: 70rpx;
}
.close-report {
  position: absolute;
  width: 80rpx;
  font-size: 80rpx !important;
  color: #ffffff;
  bottom: 0rpx;
  left: 210rpx;
}

.footer_box {
  width: 100%;
  position: absolute;
  bottom: -55rpx;
  text-align: center;
  height: 15vh;
  z-index: 103;
  color: #ffffff;
}

.footer_box .link{
  color: #24d0c6;
  line-height: 5vh;
}

