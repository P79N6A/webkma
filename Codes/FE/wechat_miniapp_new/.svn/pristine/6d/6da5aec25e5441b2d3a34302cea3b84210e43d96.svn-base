// components/customer-info/customer-info.js
Component({
  /**
   * 组件的属性列表
   */
  properties: {
    list:{
      type: Array
    },
    flag: String, //右侧图标状态
    where: {//用于哪儿,'otherPage' --其他的数据等页面, 'home' --营销日报
      type: String,
      value: 'otherPage'
    }  
  },

  /**
   * 组件的初始数据
   */
  data: {
   
  },

  /**
   * 组件的方法列表
   */
  methods: {
    //拨号
    telCall: function(e) {
      let call = e.currentTarget.dataset.call;
      if (call==null){
        wx.showToast({
          title: "获取电话号码失败",
          icon: 'none',
          duration: 2000
        });
        return false
      }
      wx.makePhoneCall({
        phoneNumber: call,
      })
    },
    //员工详情
    employeesInfo: function () {
      wx.showToast({
        title: "敬请期待",
        duration: 2000
      });
    },
    //客户详情信息
    detailsInfo: function(e){
      let id = e.currentTarget.dataset.id;
      wx.navigateTo({
        url: '/pages/customer-edit-info/customer-edit-info?id=' + id
      })
    } ,
    //客户备注
    geturl(e){
      let user_id = e.currentTarget.dataset.user;
      let id = e.currentTarget.dataset.id;
      wx.navigateTo({
        url: '/pages/remarks/remarks?user_id=' + user_id+'&id='+id
      })
    },
    
  },
})
