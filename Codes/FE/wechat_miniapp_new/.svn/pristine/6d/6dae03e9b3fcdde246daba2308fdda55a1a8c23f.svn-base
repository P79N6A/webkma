.container{
  height:100%;
}
.pull-left{
  float: left;
}
.pull-right{
  float: right;
}
.font-24{
  font-size: 24rpx;
}
.font-26{
  font-size: 26rpx;
}
.font-28{
  font-size: 28rpx;
}
.font-32{
  font-size: 32rpx;
}
.font-30{
  font-size: 30rpx;
}
.black-deep{
  color: #000;
}
.gray{
  color: #999;
}
.black-light{
  color:#999;
}
.bold{
  font-weight: bold;
}
.weui-flex{
  align-items: center;
}
.text-center{
  text-align: center;
}
.card-wrap{
  width: 720rpx;
  height: auto;
  margin:25rpx auto;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx 50rpx 20rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0px 1rpx 10rpx rgba(231,231,231,0.3);
}
.head-img{
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}
.qrcode{
  width: 335rpx;
  height: 335rpx;
  margin: 15rpx auto 10rpx;
}
.icon-download{
  width: 30rpx;
  height: 30rpx;
  cursor: pointer;
}
.option-wrap{
  width: 720rpx;
  overflow: hidden;
  margin:25rpx auto;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0px 1rpx 10rpx rgba(231,231,231,0.3);
}
.option-item{
  position: relative;
  height: 145rpx;
}
.option-icon{
  width: 36rpx;
  height:36rpx;
  margin: 60rpx 30rpx 0 30rpx;
}
.icon-arrow-right{
  width: 30rpx;
  height: 30rpx;
  margin: 55rpx 30rpx 0 0rpx;
}
.h-line{
  position: absolute;
  left: 30rpx;
  bottom: 0;
  width: 660rpx;
  height: 1rpx;
  border-top: 1rpx solid #EEEEEE;
  margin-top: 25rpx;
}

.body_box {
  position: absolute;
  top: -2000rpx;
  left: 15rpx;
  width: 720rpx;
  height: 900rpx;
  background: #fff;
  border-radius: 5rpx;
  box-shadow: 0 0 10px 2px #ccc;
  z-index: -2;
  visibility: hidden;
}

.cover_box {
  position: absolute;
  width: 100%;
  height: 100%;
}

.canvas_cover {
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}

.canvas_cover_1 {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.canvas_cover_2 {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}
.footer_box {
  position: fixed;
  display: flex;
  bottom: 0;
  text-align: center;
  width: 750rpx;
  height: 15vh;
  background-color: rgba(0,0,0,.3);
  align-items: center;
}

.footer_box .link{
  color: #24d0c6;
  line-height: 5vh;
}

.share-button{
  position: absolute;
  left: 0;
  top: 0;
  width: 720rpx;
  height: 145rpx;
  padding-left: 106rpx;
  border: 0 none !important;
  background-color: transparent !important;
  line-height: normal;
  text-align: left;
}
.share-button::after {
  border: none;
}
