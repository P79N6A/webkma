const
  activityService = require('../../services/activity-service.js'),
  utils = require('../../utils/util.js');

let self;
Page({

  data: { 
    id: "",
    h5Info: null
  },

  onLoad: function(options) {
    self = this;
    self.data.id = options.id || '';
    wx.showLoading({
      title: '数据加载中'
    });
    wx.hideShareMenu();
  },

  onShow: function() {
    this.getActivityInfo();
  },

  getActivityInfo: function(){
    activityService.activityInfo(self.data.id, (err, res) => {
      if (err) return self.errMessage(err);
      if (res.status !== 0) return self.errMessage(res.message);
      wx.setNavigationBarTitle({
        title: res.data.name
      });
      self.setData({
        h5Info: res.data
      });
      wx.hideLoading();
    });
  },
  
  onShareAppMessage: function(e) {
    let self = this,
      h5Info = self.data.h5Info,
      userInfo = getApp().globalData.userInfo,
      shareObj = null;

    switch (true) {
      case h5Info.manuscriptType != 2: //活动
        shareObj = {
          title: h5Info.name,
          path: `/pages/index/index?target=` + encodeURIComponent(`/pages/activity-detail/activity-detail?activityUrl=${h5Info.url}&title=${h5Info.name}&id=${h5Info.relationId}&as_belong_user=${userInfo.data[0].user_uuid}&forwardingUser=${userInfo.data[0].user_uuid}&goodsCount=${h5Info.goodsNumber}`),
          imageUrl: h5Info.cover || null
        }
        break;
      default: //海报
        shareObj = {
          title: h5Info.name,
          path: `/pages/index/index?target=` + encodeURIComponent(`/pages/post-img/post-img?id=${h5Info.relationId}&from_user=${userInfo.data[0].user_uuid}&from_company=${h5Info.businessInfo.businessId}`),
          imageUrl: h5Info.cover || null
        };
    }
    
    return shareObj;
  },

  errMessage: function(err) {
    wx.hideLoading();
    utils.toast.fail({
      title: err
    });
  },

  btnMoments: function(evt) {
    let param = `id=${self.data.id}&type=${evt.currentTarget.dataset.type}`;
    wx.navigateTo({
      url: `/pages/extension-task-share-cover/extension-task-share-cover?${param}`,
    })
  },

  copyLink: function () {//复制链接
    let self = this, _data = '';
    switch (true) {
      case self.data.h5Info.goodsNumber == 0: //活动
        _data = `【${self.data.h5Info.name}】${self.data.h5Info.url} 这里有一个好活动分享给你，请查收哦~`;
        break;
      case self.data.h5Info.goodsNumber > 0: //产品
        _data = `【${self.data.h5Info.name}】${self.data.h5Info.url} 悄悄告诉你，这些商品正在搞活动~`;
        break;
    }
    wx.setClipboardData({
      data: `${_data}`,
      success(res) {
        wx.getClipboardData({
          success(res) {
          }
        })
      }
    })
  }
})