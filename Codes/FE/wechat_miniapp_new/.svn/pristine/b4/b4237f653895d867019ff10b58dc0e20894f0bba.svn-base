.re-info{
  height: 217rpx;
  background-color: #FFF;
  padding: 30rpx 30rpx 45rpx;
}
.re-activity{
  height: 217rpx;
  background-color: #FFF;
  padding: 25rpx 30rpx;
}
.re-info>view{
  margin-bottom: 40rpx;
}
.re-setmoney,
.re-setnumber
{
  height: 110rpx;
  line-height: 108rpx;
  background-color: #fff;
  padding: 0 30rpx;
  margin-bottom: 5rpx;
}
.re-setmoney{
  margin-top: 25rpx;
}
.re-setmoney>view image{
  width:28rpx;
  height:28rpx;
  vertical-align:-1rpx;
  margin-right:10rpx;
}
.re-setnumber{
  margin-bottom: 80rpx;
}
.ordinary > input,
.luck > input,
.re-number > input
{
  max-width:200rpx;
  height: 110rpx;
  color: #000000;
  text-align:right;
  padding-right: 20rpx;
}
.re-money{
  text-align: center;
  margin-bottom: 60rpx;
}
.re-money text:nth-of-type(1){
  position:relative;
  top:-20rpx;
}
.re-btn{
  text-align: center;
  margin:0 auto;
}
.re-btn > button{
  width:370rpx;
  height:95rpx;
  font-size:34rpx;
  color:#fff;
  line-height:95rpx;
  border:none;
  border-radius:5rpx;
  background-color:#ea5f39;
}
button::after{
  border:none;
}