/* pages/red-envelopes-card/red-envelopes-card.wxss */
page{
  background-color: f1f3fc;
}
.flex-column{
  flex-direction: column;
}
.flex-row{
  flex-direction: row;
}
.fs80{
  font-size: 80rpx;
}
.fs48{
  font-size: 48rpx;
}
.fs36{
  font-size: 36rpx;
}
.fs32{
  font-size: 32rpx;
}
.fs26{
  font-size: 26rpx;
  color: #555555;
}
.fs24{
  font-size: 24rpx;
}
.color-gray{
  color: #bdbdbd;
}
.color-gray2{
  color: #999999;
}
.color-black{
  color: #000000;
}
.color-orange{
  color: #ff9b29;
}
.opacity4{
  opacity: 0.4;
}
.mr20{
  margin-right: 20rpx;
}
.ml30{
  margin-left: 30rpx;
}
.pad3{
  padding-top: 3rpx;
}
.mt30{
  margin-top: 30rpx;
}
.border-radius{
  border-radius: 10rpx;
}
.ellipsis{
  display: inline-block;
  max-width: 292rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.two-ellipsis{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.spell{
  display: inline-block;
  width:28rpx;
  height:28rpx;
  font-size: 24rpx;
  color: #fff;
  line-height:28rpx;
  text-indent:3rpx;
  border-radius:5rpx;
  margin-right:10rpx;
  vertical-align:3rpx;
  background-color: #ff9b29;
}
.re-main{
  padding: 0 15rpx;
}
.re-title{
  width: 100%;
  height: 94rpx;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  line-height: 94rpx;
}
