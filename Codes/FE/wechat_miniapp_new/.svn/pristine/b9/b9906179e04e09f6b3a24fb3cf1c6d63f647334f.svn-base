<!--components/tasks-list/tasks-list.wxml-->
<view class='content'>
  <view class='list_item'>
    <view class='left_cont' catchtap='itemDetali'>
      <image class='item_img' src='{{itemData.cover}}'></image>
      <view class='left_child'  wx:if="{{pageType<1}}">
        <view class='left_info'>
          <text>排名</text>
          <text class='orange_font'>{{itemData.ranking}}</text>
        </view>
        <view  class='left_info'>
          <text>上升</text>
          <text class='orange_font'>{{itemData.rise}}</text>
        </view>
      </view>
      <view class='left_child'  wx:if="{{pageType>0}}">
        <view class='left_info'>
          <text class='orange_font'>{{itemData.finishEmployeeNumber}}/{{itemData.employeeNumber}} </text>
        </view>
        <view  class='left_info'>
          <text>完成员工数</text>
        </view>
      </view>
    </view>
    <view class='item_info'>
      <view class='name'>
        <image wx:if="{{itemData.isRed>0&&pageType>0}}" class='repack' src='../../images/icon-wechat-redpack.png'></image>
        {{itemData.name}} 
      </view>
      <view class='timer cont_bottom'>
        <text  class='cont_title'>剩余</text>
        <text class='timer_num'>{{itemData.timer.day}}天{{itemData.timer.hour}}小时{{itemData.timer.minute}}分</text>
      </view>
      <view class='cont_bottom planned_speed'>
        <view class='cont_title'>目标完成率</view>
        <view class='mind'>
          <i-progress status="wrong" stroke-width='4' i-class="progress" percent="50"></i-progress>
        </view>
      </view>
      <view class='cont_bottom cont_title'>
        <text class='cont_title'>曝光  {{itemData.exposure}}</text>
        <text class='cont_title'>客户 {{itemData.userNumber}}</text>
      </view>
      <view class='cont_lable'>
        <view wx:for="{{itemData.label}}" wx:key='index'>{{item.labelName}}</view>
      </view>
    </view>
    <view class='operationBtn {{pageType>0?"isBossItem":""}}'>
      <text class="iconfont icon-marketing-xtension" catchtap='shareBtn'  wx:if="{{pageType<1}}"></text>
      <text class="iconfont icon-company-information" catchtap='dataInfoData'></text>
    </view>
  </view>
</view>
