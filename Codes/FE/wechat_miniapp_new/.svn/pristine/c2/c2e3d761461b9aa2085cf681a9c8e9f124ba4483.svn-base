/* pages/customer-edit-info/customer-edit-info.wxss */
.container{ 
  height: 100vh;
  background-color: #F1F3FC;
  overflow: hidden;
}

.color-gray{
  color: #999999;
}

.customer-info{
  width: 100vw;
  height: 90rpx;
  font-size: 24rpx;
  color: #000000;
  background-color: #fff;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #B1BFCD;
}

.customer-info>view{
  /* width: 100%; */
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #EEEEEE;
  padding: 0 55rpx 0 20rpx;
  position: relative;
}

.customer-info>view .required{
  color: #FA766B;
  position: absolute;
  left: 0;
  top: 5rpx;
}

.customer-info>view:last-child{
  border-bottom: none;
}

.customer-info>view input{
  width: 400rpx;
  font-size: 24rpx;
  text-align: right;
  color: #B1BFCD;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap; 
  margin-top: 19rpx; 
}

.customer-info>view .phcolor-source{
    color: #3898EC;
}

.switch-arrows{
  width: 25rpx;
  height: 22rpx;
  position: relative;
  top: 3rpx;
}

/* 按钮 */
.customer-btn{
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #EEEEEE;
  margin: 0 auto;
  position: fixed;
  bottom: 22rpx;
}
.customer-btn button{
  width:80%;
  height:79rpx;
  color:#fff;
  line-height:79rpx;
  border:none;
  border-radius:8rpx;
  background-color:#24D0C6;
  margin:0 auto;
  margin-top:12rpx;
}