<view class="container">
  <block>
    <button class="weui-btn" hover-class="btn-blue-hover" type="primary" style="width: 600rpx; height: 80rpx;line-height:80rpx;margin-top:960rpx;" bindtap='downloadCard' wx:if="{{!!cardSrc}}">保存</button>
  </block>
</view>
<view class="body_box">
  <view class="cover_box">
    <canvas canvas-id="card_canvas" class="canvas_cover"></canvas>
  </view>
</view>
<view class="footer_box" wx:if="{{coverSaveStatus == 2}}">
  <block>
    <button class="weui-btn" hover-class="btn-blue-hover" type="primary" style="width: 80vw;" open-type="openSetting" bindopensetting="saveImg">授权保存</button>
  </block>
</view>