/* pages/marketing-report.wxss */
@import "/components/icon/iconfont.wxss";
view{
  box-sizing: border-box;
}
.headers{
    position: relative;
    width: 100%;
    height: 340rpx;
    margin-bottom: 20rpx;
    background-size: 100% 100%;
    background-image: url("https://resource.tuixb.cn/beta/00000000-0000-0000-0000-000000000000/KMA/miniapp/top-BG.png")
  }
  .top_title{
    text-align: center;
    font-size: 16rpx;
    color: #ffffff;
    position: relative;
    margin-bottom: 30rpx;
  }
  .title_cont{
    width: 100%;
    height: 55rpx;
    display: flex;
    justify-content: center;
    align-self: center;
    align-items: center;
    padding-top: 25rpx;
    margin-bottom: 13rpx;
  }
  .mind{
    font-size: 24rpx;
    margin: 0rpx 12rpx;
    color: #ffffff;
  }
  .circular{
    width: 14rpx;
    height: 14rpx;
    border-radius:50% ;
    background: #ffffff
  }
  .line{
    width: 51rpx;
    height: 3rpx;
    background: #ffffff;
  }
  .headers .iconfont{
    position: absolute;
    top:0rpx;
    right: 20rpx;
    color: #ffffff;
    font-size: 38rpx;
    z-index: 1
  }
  /* 头部总数展示 */
  .top_total_value{
    width: 100%;
    padding: 0 10rpx;
    background: transparent;
  }
  .top_total_count{
    width: 100%;
    height: 205rpx;
    background: #ffffff;
    border-radius:10rpx;
    display: flex;
    padding-top: 62rpx;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
  }
  .total_item{
    height: 74rpx;
    text-align: center;
    border-right: 1rpx solid #DDE4EB;
  }
  .total_item:last-child{
    border: none;
  }
  .total_label{
    font-size: 22rpx;
    margin-bottom: 13rpx;
    line-height: 20rpx;
    color: #B1BFCD;
  }
  .total_value{
    font-size: 36rpx;
    line-height: 54rpx;
    color: #24D0C6;
  }
  /* 内容区 */
  .content_title{
    /* height: 35rpx; */
    line-height: 34rpx;
    padding: 27rpx 20rpx 28rpx 25rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #DDE4EB;
    position: relative;
  }
  .side-line{
    width: 5rpx;
    height: 40rpx;
    background-color: #24D0C6;
    position: absolute;
    left: 0;
    top: 24rpx;
  }