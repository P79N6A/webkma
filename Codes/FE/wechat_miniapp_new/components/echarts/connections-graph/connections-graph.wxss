ec-canvas {
  width: 100%;
  height: 100%;
}

.cell {
  height: 100%;
  background-color: #fff;
}

.stat-cell {
  height: 100%;
  background-color: #fff;
  font-size: 24rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.row-text {
  text-align: left;
}

.row-icon-completed {
  padding-right: 6rpx;
  color: #69e4dd;
}

.row-icon-doing {
  padding-right: 6rpx;
  color: #f3f3f3;
}

.row-value {
  padding-left: 6rpx;
  color: #fa766b;
  font-weight: 500;
}
