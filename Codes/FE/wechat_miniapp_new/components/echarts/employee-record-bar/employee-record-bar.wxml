<wxs src="../../../utils/wxs/convert.wxs" module="cont" />
<i-row i-class="cell">
  <i-col span="2" i-class="stat-cell"></i-col>
  <i-col span="6" i-class="stat-cell">
    <view style="display:flex;flex-direction:column;justify-content:center;height:100%;">
      <view class="row-text">
        <text class="row-icon-total">●</text>
        <text>全体员工</text>
        <text class="row-value">{{dataSource.total}}</text>
      </view>
      <view class="row-text">
        <text class="row-icon-full">●</text>
        <text>满分战绩</text>
        <text class="row-value">{{dataSource.value}}</text>
      </view>
      <view class="row-text">
        <text class="row-icon-normal">●</text>
        <text>完成率</text>
        <text class="row-value">{{cont.fixed(dataSource.value/dataSource.total)*100}}%</text>
      </view>
    </view>
  </i-col>
  <i-col span="16" i-class="cell">
    <ec-canvas id="chart_{{uid}}" canvas-id="chart_{{uid}}" ec="{{ec}}" wx:if="{{!isDisposed}}"></ec-canvas>
  </i-col>
</i-row>