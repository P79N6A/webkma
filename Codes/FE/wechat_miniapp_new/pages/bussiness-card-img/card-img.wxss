page{
  overflow: hidden;
}
.container{ 
  height:100%;
} 
.body_box {
  position: absolute;
  top: 20rpx;
  left: 15rpx;
  width: 720rpx;
  height: 900rpx;
  background: #fff;
  box-shadow: 0px 2rpx 10rpx rgba(0,0,0,0.1);
}

.cover_box {
  position: absolute;
  width: 100%;
  height: 100%;
}

.canvas_cover {
  width: 100%;
  height: 100%;
}

.footer_box {
  position: fixed;
  display: flex;
  bottom: 0;
  text-align: center;
  width: 750rpx;
  height: 15vh;
  background-color: rgba(0,0,0,.3);
  align-items: center;
}

.footer_box .link{
  color: #24d0c6;
  line-height: 5vh;
}