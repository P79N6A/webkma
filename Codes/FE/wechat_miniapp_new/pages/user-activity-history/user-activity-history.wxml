<view class='pg-index-main'>
  <view class="page-header-bg" wx-if="{{taskList.length>0}}">
    <view class="page-default-bg"></view>
    <view class='my-head-decorate'></view>
  </view>
  <view class='ac-body'>
    <comp-list-card list-data="{{taskList}}" show-publish-time="{{true}}" show-join-count="{{false}}" is-loading="{{loadingOpj.isLoading}}" bind:tapEvent="onTapEvent">
    </comp-list-card>
    <i-load-more i-class="my-load-more" wx:if="{{showTips}}" tip="{{loadingOpj.loadingText}}" loading="{{loadingOpj.loadingText=='加载中'}}" />
  </view>
</view>